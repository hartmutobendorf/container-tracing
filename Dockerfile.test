# Dockerfile for running and testing the service
FROM rust:1.75-slim

WORKDIR /test

# Install dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Copy test script
COPY test-service.sh /test/test-service.sh
RUN chmod +x /test/test-service.sh

# Set the daemon host (will be overridden by docker compose or network)
ENV DAEMON_HOST=localhost
ENV DAEMON_PORT=8080

CMD ["/test/test-service.sh"]
